<!-- styles.xml -->
<resources>
    <style name="Theme.MyProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <!-- Inactive bottom navigation text style -->
    <style name="BottomNavTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Active bottom navigation text style -->
    <style name="BottomNavTextAppearanceActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>