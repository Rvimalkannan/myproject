<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:id="@+id/cardetails">

    <!-- Header / App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            app:title="Car Details"
            app:titleTextColor="#0F172A"
            app:navigationIcon="@drawable/backarrow" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Car Title -->
            <TextView
                android:id="@+id/tvCarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCarModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Model"
                android:textSize="16sp"
                android:textColor="#666"
                android:layout_marginBottom="12dp" />

            <!-- Image Slider -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="12dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|start"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_media_previous"
                    app:tint="#444444"
                    android:padding="6dp" />

                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_media_next"
                    app:tint="#444444"
                    android:padding="6dp" />
            </FrameLayout>

            <!-- Price Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvCarPriceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹75,00,000"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A73E8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On Road Price"
                    android:textSize="14sp"
                    android:textColor="#666" />
            </LinearLayout>

            <!-- Car Details Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Car Details Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <!-- Year -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/card_gradient"
                    android:gravity="center_vertical"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calender"
                        app:tint="#6D1E97" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Year"
                            android:textSize="12sp"
                            android:textColor="#666" />

                        <TextView
                            android:id="@+id/tvCarYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>

                <!-- KM Driven -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/card_gradient"
                    android:gravity="center_vertical"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/km" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KM Driven"
                            android:textSize="12sp"
                            android:textColor="#666" />

                        <TextView
                            android:id="@+id/tvCarKm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12,500"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Fuel Type -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/card_gradient"
                    android:gravity="center_vertical"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/fuel" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fuel Type"
                            android:textSize="12sp"
                            android:textColor="#666" />

                        <TextView
                            android:id="@+id/tvCarFuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Petrol"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Ownership -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/card_gradient"
                    android:gravity="center_vertical"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/owner" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ownership"
                            android:textSize="12sp"
                            android:textColor="#666" />

                        <TextView
                            android:id="@+id/tvCarOwner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1st Owner"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Transmission -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/card_gradient"
                    android:gravity="center_vertical"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transmisson" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transmission"
                            android:textSize="12sp"
                            android:textColor="#666" />

                        <TextView
                            android:id="@+id/tvCarTransmission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Automatic"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Insurance End -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@drawable/card_gradient"
                    android:gravity="center_vertical"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calender" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insurance End"
                            android:textSize="12sp"
                            android:textColor="#666" />

                        <TextView
                            android:id="@+id/tvCarInsurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dec 2025"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>
            </GridLayout>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/loc1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available in"
                        android:textSize="12sp"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/tvCarLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mumbai"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000" />
                </LinearLayout>
            </LinearLayout>

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvCarDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Well maintained car with service history."
                    android:textSize="14sp"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallDealer"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Call Dealer"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#191970"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTestDrive"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Test Drive"
            android:textColor="@android:color/black"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeWidth="2dp"
            app:strokeColor="@color/gray"
            app:backgroundTint="@android:color/white"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
