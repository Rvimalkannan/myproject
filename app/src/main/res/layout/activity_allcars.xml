<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Allcars">

    <!-- ðŸ”¹ Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F7F9FB"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AutoHub"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#0F172A" />

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/filter1"
                android:contentDescription="Filter" />
        </LinearLayout>

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search"
                    app:tint="#8A94A6" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:hint="Search cars..."
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:textColor="#0F172A"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCars"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />
    </LinearLayout>

    <!-- ðŸ”¹ Right-side Filter Drawer -->
    <ScrollView
        android:id="@+id/rightDrawer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:padding="20dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Close Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filters"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"/>

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ•"
                    android:textSize="18sp"
                    android:textColor="#6B7280"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Show Variant Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Variant"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#374151"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnSedan"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="SEDAN"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnSUV"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="SUV"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnHatchback"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="HATCHBACK"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnLuxury"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="LUXURY"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>
            </LinearLayout>

            <!-- Fuel Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel Type"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#374151"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnPetrol"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="PETROL"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnDiesel"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="DIESEL"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnCNG"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="CNG"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnElectric"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="ELECTRIC"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>
            </LinearLayout>

            <!-- Transmission Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transmission"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#374151"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnManual"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="MANUAL"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnAutomatic"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="AUTOMATIC"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>
            </LinearLayout>

            <!-- Number of Owners Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Owners"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#374151"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnFirstOwner"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="FIRST"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnSecondOwner"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="SECOND"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/btnThirdOwner"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="THIRD"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btnFourthOwner"
                    style="@style/FilterButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="FOURTH+"
                    android:textSize="12sp"
                    android:backgroundTint="@null"/>
            </LinearLayout>

            <!-- Action Buttons -->
            <!-- Action Buttons with colored backgrounds -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:background="#FFFFFF">

                <!-- Reset Button with Border -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReset"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="12dp"
                    android:backgroundTint="#FFFFFF"
                    app:strokeColor="#0D9488"
                    app:strokeWidth="2dp"
                    android:text="Reset"
                    android:textAllCaps="false"
                    android:textColor="#0D9488"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <!-- Apply Filter Button (Filled) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApplyFilter"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="12dp"
                    android:backgroundTint="#0D9488"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>