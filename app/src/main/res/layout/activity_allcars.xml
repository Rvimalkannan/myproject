<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F9FB"
    android:padding="16dp"
    tools:context=".Allcars">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AutoHub"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0F172A"
        android:layout_marginBottom="12dp" />

    <!-- Search bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                app:tint="#8A94A6" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Search cars..."
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textColor="#0F172A"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tabs row -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/tabsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:background="@drawable/tab_active"
                android:text="All"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tabSedan"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:background="@drawable/tab_inactive"
                android:text="Sedan"
                android:textColor="#344054"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tabSUV"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:background="@drawable/tab_inactive"
                android:text="SUV"
                android:textColor="#344054"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tabHatch"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:background="@drawable/tab_inactive"
                android:text="Hatchback"
                android:textColor="#344054"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tabElectric"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:background="@drawable/tab_inactive"
                android:text="Electric"
                android:textColor="#344054"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tabLuxury"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:background="@drawable/tab_inactive"
                android:text="Luxury"
                android:textColor="#344054"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView for cars -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCars"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

</LinearLayout>
