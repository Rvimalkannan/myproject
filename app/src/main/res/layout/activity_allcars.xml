<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Allcars">

    <!-- ðŸ”¹ Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F7F9FB"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AutoHub"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#0F172A" />

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/filter1"
                android:contentDescription="Filter" />
        </LinearLayout>

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search"
                    app:tint="#8A94A6" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:hint="Search cars..."
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:textColor="#0F172A"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCars"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />
    </LinearLayout>

    <!-- ðŸ”¹ Right-side Filter Drawer -->
    <LinearLayout
        android:id="@+id/layoutFilter"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <ScrollView
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filters"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/tvCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <!-- Show Variant Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Variant"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btnSedan"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="Sedan"
                            android:textOff="Sedan"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />

                        <ToggleButton
                            android:id="@+id/btnSuv"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="SUV"
                            android:textOff="SUV"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btnHatchback"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="Hatchback"
                            android:textOff="Hatchback"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />

                        <ToggleButton
                            android:id="@+id/btnLuxury"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="Luxury"
                            android:textOff="Luxury"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Fuel Type Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuel Type"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btnPetrol"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="Petrol"
                            android:textOff="Petrol"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />

                        <ToggleButton
                            android:id="@+id/btnDiesel"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="Diesel"
                            android:textOff="Diesel"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btnCng"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="CNG"
                            android:textOff="CNG"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />

                        <ToggleButton
                            android:id="@+id/btnElectric"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="Electric"
                            android:textOff="Electric"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Transmission Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transmission"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/btnManual"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:textOn="Manual"
                        android:textOff="Manual"
                        android:textSize="14sp"
                        android:background="@drawable/toggle_button_selector" />

                    <ToggleButton
                        android:id="@+id/btnAutomatic"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:textOn="Automatic"
                        android:textOff="Automatic"
                        android:textSize="14sp"
                        android:background="@drawable/toggle_button_selector" />
                </LinearLayout>

                <!-- Number of Owners Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Owners"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btnFirstOwner"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="First"
                            android:textOff="First"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />

                        <ToggleButton
                            android:id="@+id/btnSecondOwner"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="Second"
                            android:textOff="Second"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btnThirdOwner"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="Third"
                            android:textOff="Third"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />

                        <ToggleButton
                            android:id="@+id/btnFourthOwner"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:textOn="Fourth+"
                            android:textOff="Fourth+"
                            android:textSize="14sp"
                            android:background="@drawable/toggle_button_selector" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Bottom Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:text="Reset"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_btn_reset"
                       />

                    <Button
                        android:id="@+id/btnApply"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:text="Apply"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_btn_reset"
                 />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>
