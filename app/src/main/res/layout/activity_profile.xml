<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profimg"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:padding="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monoj"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvMember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member since 2023"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>

        <!-- Contact Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9047383251"
                android:drawablePadding="8dp"
                android:textColor="#000000" />

            <TextView
                android:drawableLeft="@android:drawable/ic_dialog_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ManoSowmi@example.com"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000" />

            <TextView
                android:drawableLeft="@android:drawable/ic_menu_mylocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salem, Tamil Nadu"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- About Seller -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Seller"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car enthusiast and seller"
            android:layout_marginTop="4dp"
            android:textColor="#666666" />

        <!-- My Cars Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Cars"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Car 1 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@color/white"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/benz" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2021 benz Model 3"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS 35,00,000"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- Car 2 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@color/white"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/bmw"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020 BMW 5 Series"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS 28,00,000"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- Car 3 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/honda"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018 Honda Civic"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS18,00,000"
                        android:textColor="#666666" />
                </LinearLayout>
                <!-- Car 4 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@color/white"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/thor"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023 Thor Series 4X4"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS 38,00,000"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Ratings & Trust -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings || Trust"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Rating row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐⭐⭐⭐ 4.7 (50 buyers)"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Verification row (now placed BELOW rating row) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Verified || Email Verified"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>
</ScrollView>
