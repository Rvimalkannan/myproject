<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/ivCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bmw" />

            <!-- Price badge -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="#FFFFFF"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="â‚¹75,00,000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#F59E0B"
                android:layout_gravity="top|end" />
        </FrameLayout>

        <!-- Car details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCarName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BMW X5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0F172A" />

            <TextView
                android:id="@+id/tvCarModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xDrive40i M Sport"
                android:textSize="13.5sp"
                android:textColor="#687182"
                android:layout_marginTop="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#F1F5F9" />

            <!-- Info row -->
            <!-- Info row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start">

                    <!-- Year -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/calender"
                            app:tint="#344054"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tvYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023"
                            android:textSize="13sp"
                            android:textColor="#344054"/>
                    </LinearLayout>

                    <!-- Fuel -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/fuel"

                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tvFuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Petrol"
                            android:textSize="13sp"
                            android:textColor="#344054"/>
                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/loc1"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mumbai"
                            android:textSize="13sp"
                            android:textColor="#344054"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start">

                    <!-- KM -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/km"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tvKm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12,500 km"
                            android:textSize="13sp"
                            android:textColor="#344054"/>
                    </LinearLayout>

                    <!-- Owner -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/owner"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tvOwner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1st Owner"
                            android:textSize="13sp"
                            android:textColor="#344054"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- Button -->
            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                app:backgroundTint="#0D9488"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
